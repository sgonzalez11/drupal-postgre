{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}
<div class="container-fluid">

    {% set entitystatus = form.entity_status.widget['#value'].0 %}
    {% set entitystatusoptions = form.entity_status.widget['#options'] %}
    {% set entityId = form['#entityId'] %}

    {% set statusvaluelabel = "" %}
    {% for key, statuslabel in entitystatusoptions %}
        {% if key == entitystatus %}
            {% set statusvaluelabel = statuslabel %}
        {% endif %}
    {% endfor %}

    <div class="row">
        <div class="col-sm-3">{{ form.name }}</div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <label>{{ "Head medical assessor"|t }}</label>
            {{ form.assessment_medical_assessor }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{ form.assessment_date }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <label>{{ "Recommendation"|t }}</label>
            {{ form.assessment_recommendation }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <label>{{ "Limitations"|t }}</label>
            {{ form.assessment_limitations }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <label>{{ "Notes"|t }}</label>
            {{ form.assessment_notes }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">{{ form.actions.submit }}{{ form.actions.cancel }}</div>
    </div>
    
    {{ form.form_build_id }}
    {{ form.form_token }}
    {{ form.form_id }}
</div>
